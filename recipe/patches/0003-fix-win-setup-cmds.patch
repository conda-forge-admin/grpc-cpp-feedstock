diff --git a/setup.py b/setup.py
index 2420ebd6dc..7eb2b52ca8 100644
--- a/setup.py
+++ b/setup.py
@@ -24,7 +24,6 @@ from distutils.unixccompiler import UnixCCompiler
 UnixCCompiler.src_extensions.append('.S')
